<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView android:id="@+id/surfaceview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/surfaceview"
        android:gravity="center">

        <xyz.jimbray.rosbridge.customviews.CircleButton android:id="@+id/btn_forward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/forward"
            android:layout_margin="15dp"
            android:background="@drawable/bg_circle"
            android:gravity="center"/>

        <xyz.jimbray.rosbridge.customviews.CircleButton android:id="@+id/btn_backward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/backward"
            android:layout_above="@id/btn_center"
            android:layout_margin="15dp"
            android:background="@drawable/bg_circle"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>